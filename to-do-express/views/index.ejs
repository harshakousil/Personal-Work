<html>
  <head>
    <title>ToDo App</title>
    <link
      href="https://fonts.googleapis.com/css?family=Lato:100"
      rel="stylesheet"
    />
    <link href="public/css/style.css" rel="stylesheet" />
  </head>
  <style>
    body {
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      text-align: center;
      background-color: #f5f5f5;
    }
    .container {
      text-align: center;
    }

    h1 {
      /* width: 100%; */
      font-size: 100px;
      font-weight: 100;
      color: rgba(175, 47, 47, 0.15);
      margin: 0px;
    }
    h2 {
      font-size: 30px;
    }

    li {
      text-decoration: none;
      list-style-type: none;
    }
    .form-class {
      padding: 1rem;
      width: fit-content;
      text-align: left;
      margin-left: 35rem;
    }
    .todo-data {
      width: 20rem;
      height: 2rem;
      border: none;
      border-radius: 3px;
    }
    .btn {
      width: auto;
      height: 2rem;
      margin-left: 1rem;
      background-color: #42855b;
      padding: 2px 5px;
      border: none;
      border-radius: 5px;
      color: white;
    }
    .btn-1 {
      width: auto;
      height: 2rem;
      background-color: #42855b;
      padding: 2px 5px;
      border: none;
      border-radius: 5px;
      color: white;
    }
    .main input:checked ~ .strike
    {
      text-decoration: line-through;
      font-weight: lighter;
      color: lightgray;
    }
  </style>

  <body>
    <div class="container">
      <h1>todos</h1>
      <form class="form-class" action="/addtask" method="POST">
        <input
          class="todo-data"
          type="text"
          name="newtask"
          placeholder="What needs to be done ?"
        />
        <button class="btn">Add Task</button>

        <h2>Added Tasks</h2>

        <% for( var i = 0; i < task.length; i++){ %>
        <li class="main">
          <input type="checkbox" name="check" value="<%= task[i] %>" /> <span class="strike"><%=task[i]%></span>
        </li>
        <% } %>
        <br />
        <button class="btn-1" formaction="/removetask" type="submit" id="top">
          Mark as completed
        </button>
      </form>
      <form class="form-class">
        <h2>Completed Tasks</h2>
        <% for(var i = 0; i < complete.length; i++){ %>
        <li><input type="checkbox" name="Completed" /><%= complete[i] %><button
          class="btn-1"
          formaction="/deletetask/<%=i%>"
          formmethod="post"
          name="del-task"
          type="submit"
          id="top"
        >
          Remove Tasks
        </button></li>
        <% } %>
        <br />
        
      </form>
    </div>
  </body>
</html>
